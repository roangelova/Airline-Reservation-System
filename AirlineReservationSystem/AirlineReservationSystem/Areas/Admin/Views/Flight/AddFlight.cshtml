@{
    ViewData["Title"] = "Add Flight";

    var aircrafts = (List<SelectListItem>)ViewBag.AvailableAircraft;
    var departures = (List<SelectListItem>)ViewBag.AvailableDepartures;
}

<section>
    <div class="card card-primary" data-select2-id="33">
        <div class="card-header">
            <h3 class="card-title">Add a new flight connection</h3>
        </div>

        <div class="card-body" data-select2-id="32">
            <div class="row" data-select2-id="31">
                <div class="col-md-6" data-select2-id="30">
                    <form>
                        <div class="form-group" data-select2-id="29">
                            <label for="DepartureCity">Departure Airport</label>
                            <select name="DepartureCity" asp-items="@departures" id="departureAirport" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                            </select>
                        </div>
                        <br />
                        <div class="form-group" data-select2-id="29">
                            <label>Arrival Airport</label>
                            <select name="ArrivalCity" asp-items="@departures" id="arrivalAirport" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                            </select>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for"FlightInformation">Choose a departure time:</label>

                            <input required type="datetime-local" id="meeting-time"
                                   name="FlightInformation" value="2023-06-11T19:30"
                                   min="2022-04-28T00:00" max="2023-06-12T00:00">
                        </div>
                        <br />
                        <div class="form-group" data-select2-id="29">
                            <label>Pick an aircraft</label>
                            <select name="Aircraft" asp-items="@aircrafts" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                            </select>
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Set standard flight ticket price:</label>
                            <input required name="StandardTicketPrice" type="number" placeholder="199.00" step="0.01" min="50" max="4500">
                        </div>
                        <div class="card-footer">
                            <button type="submit" formmethod="post" class="btn btn-primary">Add flight</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="card-footer">
        Please make sure you have all the arrival/departure slots available before adding this flight.
    </div>
</section>

