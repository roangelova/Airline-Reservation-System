@using AirlineReservationSystem.Core.Models.User_Area
@model EditPassengerDataVM;

@{
    ViewData["Title"] = "Passenger Data";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Passenger Information</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="inputName">First Name</label>
                <input readonly type="text" id="inputName" class="form-control" value="Max">
            </div>
            <div class="form-group">
                <label for="inputName">Last Name</label>
                <input readonly type="text" id="inputName" class="form-control" value="Mustermann">
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth">Date of birth</label>
                <input asp-for="DateOfBirth" type="text" id="DateOfBirth" class="form-control" value="01.01.2000">
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nationality">Nationality</label>
                <input asp-for="Nationality" type="text" id="Nationality" class="form-control" value="German">
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentId">Document Id *</label>
                <input asp-for="DocumentId" type="text" id="DocumentId" class="form-control" value="123456789">
                <span asp-validation-for="DocumentId" class="text-danger"></span>
            </div>
            <button type="submit" formmethod="post" class="btn btn-primary">Submit</button>
        </div>
        <div class="alert alert-info alert-dismissible">
            In case you need to perform a name change, please get in contact with our customer service.<br />
            Please make sure you provide valid information, as your document will be screened at the security desk at the airport.
        </div>
    </div>

</div>
