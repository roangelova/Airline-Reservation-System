@{
    ViewData["Title"] = "Passenger Data";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Passenger Information</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="inputName">First Name</label>
                <input readonly type="text" id="inputName" class="form-control" value="Max">
            </div>
            <div class="form-group">
                <label for="inputName">Last Name</label>
                <input  readonly type="text" id="inputName" class="form-control" value="Mustermann">
            </div>
            <div class="form-group">
                <label for="inputClientCompany">Date of birth</label>
                <input type="text" id="inputClientCompany" class="form-control" value="01.01.2000">
            </div>
            <div class="form-group">
                <label for="inputProjectLeader">Nationality</label>
                <input type="text" id="inputProjectLeader" class="form-control" value="German">
            </div>
            <div class="form-group">
                <label for="inputProjectLeader">Document Id *</label>
                <input type="text" id="inputProjectLeader" class="form-control" value="123456789">
            </div>
        </div>
            <div class="alert alert-info alert-dismissible">In case you need to perform a name change, please get in contact with our customer service. </br> Please make sure you provide valid information, as your document will be screened at the security desk at the airport.
    </div>

</div>
