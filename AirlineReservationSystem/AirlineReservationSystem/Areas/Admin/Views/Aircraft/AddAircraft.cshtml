@using AirlineReservationSystem.Core.Models.AdminArea.Aircraft;
@model AddAircraftVM;

@{
    ViewData["Title"] = "Add aircrfat to fleet";
}

<section>
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">  Please fill in the aircraft data.</h3>
            </div>
            <form>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Manufacturer">Manufacturer</label>
                        <input asp-for="Manufacturer" type="text" class="form-control" name="Manufacturer" id="manufacturerId" placeholder="Enter aircraft manufacturer">
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AircraftModel">AircraftModel</label>
                        <input asp-for="AircraftModel" type="text" class="form-control" name="AircraftModel" id="modelId" placeholder="Enter aircraft model">
                        <span asp-validation-for="AircraftModel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Capacity">Capacity</label>
                        <input asp-for="Capacity" type="text" class="form-control" id="capacityId" name="Capacity" placeholder="Enter aircraft capacity">
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl">Image Url</label>
                        <input asp-for="ImageUrl" type="text" class="form-control" id="ImageUrl" name="ImageUrl" placeholder="Enter aircraft image url">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" formmethod="post" class="btn btn-primary">Add to fleet</button>
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}