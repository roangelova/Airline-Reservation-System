@using AirlineReservationSystem.Core.Models.AdminArea.Flight


@model IEnumerable<FlightsForCancellationVM>
@{
    ViewData["Title"] = "Cancel Flight";
}

<section>
    <div class="col-12">
        <form>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Pick a flight to cancel</h3>
                </div>

                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>Departure destination</th>
                                <th>Arrival destination</th>
                                <th>Ticket price</th>
                                <th>Flight Information</th>
                                <th>Number of bookings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td style="font-size:18px">There are no scheduled flights at the moment!</td>
                                </tr>

                            }
                            else
                            {
                                @foreach (var flight in Model)
                                {
                                    <tr>
                                        <td>@flight.DepartureDestination</td>
                                        <td>@flight.ArrivalDestination</td>
                                        <td>@flight.DateAndTime</td>
                                        <td>@flight.Price</td>
                                        <td>@flight.NumberOfBookings</td>
                                        <td><button type="submit" formmethod="post" asp-action="cancelFlight" asp-controller="flight" asp-route-id="@flight.FlightId" class="btn btn-primary">Cancel flight</button></td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    Please make sure you perform a revenue analysis on the flight you wish to cancel before taking action.
                </div>
            </div>
        </form>
    </div>
</section>
