@using AirlineReservationSystem.Core.Models.User_Area

@model IEnumerable<AvailableFlightsVM>
@{
    ViewData["Title"] = "Book a Flight";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Available flights</h3>
            <div class="card-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>Departure destination</th>
                        <th>Arrival destination</th>
                        <th>Flight Information</th>
                        <th>Ticket price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var flight in Model)
                    {
                    <tr>
                        <td>@flight.DepartureDestination</td>
                        <td>@flight.ArrivalDestination</td>
                        <td>@flight.DateAndTime</td>
                        <td>@flight.Price</td>
                        <td><button type="submit" formmethod="post"  class="btn btn-primary">Book</button></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>