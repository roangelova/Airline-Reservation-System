<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Airline Reservation System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/theme/vendor/magnific-popup/magnific-popup.css">
    <link href="/theme/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/UserMenu.css" rel="stylesheet">
    <link rel="stylesheet" href="/theme/css/creative.min.css">
    <link href="/theme/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    @await RenderSectionAsync("Head", false)
</head>
<body>

    <nav>
        <div>
            <ul>
                <partial name="_LoginPartial" />
            </ul>
        </div>
    </nav>

    
      

    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">Your Favorite Airline</h1>
                <hr>
                <p>Fly the greenest airline in Europe to more than 50+ destinations! Book your flight now!</p>
                <a asp-action="book" asp-controller="booking" class="btn btn-primary btn-xl page-scroll">Book a flight</a>
            </div>
        </div>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div style="justify-content:center">
            <p>&copy; 2022 - AirlineReservationSystem</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/creative.min.js"></script>
    <script src="/theme/vendor/scrollreveal/scrollreveal.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="/theme/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <!-- jQuery -->
    <script src="/theme/vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/theme/vendor/bootstrap/js/bootstrap.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
